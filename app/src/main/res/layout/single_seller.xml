<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:id="@+id/seller_linearlayout">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/loading"
        app:riv_border_color="@color/black"
        app:riv_border_width="1dip"
        app:riv_corner_radius="15dip"
        app:riv_mutate_background="false"
        app:riv_oval="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sellerimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tushar's Store"
            android:textColor="@color/black"
            android:textSize="26sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="+91 9987812135"
                android:textColor="@color/grey_800"
                android:textSize="15sp" />

   <!--         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="|"
                android:textSize="30sp"/>
-->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/grey_500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"
                />
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/display_rating"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:rating="3.5" />

        </LinearLayout>

        <TextView
            android:id="@+id/seller_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="We have some of tasty and marvelous cakes around. Have a taste you would never forget !"
            android:textColor="@color/custom_yellow_1"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>