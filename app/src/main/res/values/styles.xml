<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/cyan_800</item>
        <item name="colorControlActivated">@color/cyan_800</item>
        <item name="android:fontFamily">@font/roboto_light</item>

    </style>

    <style name="EditextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="color">@color/cyan_800</item>
        <item name="android:background">@drawable/editextbox</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>


    <style name="raisedbutton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/cyan_800</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="flatbutton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
